---
import "~/styles/FrameControls.scss";

const { style } = Astro.props;
---

<script>
    // @ts-nocheck
    import { Controls } from "~/lib/frameControls";

    const reload = document.getElementsByClassName('reload')[0] as HTMLDivElement,
        goBack = document.getElementsByClassName('back')[0] as HTMLDivElement,
        goForwards = document.getElementsByClassName('forwards')[0] as HTMLDivElement;

    const iframe = document.querySelectorAll('iframe')[0];
    const controls = new Controls();

    reload.onclick = () => {
        controls.reload(iframe);
    };

    goBack.onclick = () => {
        controls.goBack(iframe);
    };

    goForwards.onclick = () => {
        controls.goForth(iframe);
    };
</script>

